<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
											http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>CGA103G2</display-name>
    <welcome-file-list>
		<welcome-file>FrontIndex.jsp</welcome-file>
		<welcome-file>BackLogin.jsp</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/cga103g2</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!-- 登入 start -->
	<servlet>
		<servlet-name>EmpLoginServlet</servlet-name>
		<servlet-class>com.emp.controller.EmpLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmpLoginServlet</servlet-name>
		<url-pattern>/EmpLoginServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>BackIndexServlet</servlet-name>
		<servlet-class>com.back.controller.BackIndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BackIndexServlet</servlet-name>
		<url-pattern>/BackIndexServlet</url-pattern>
	</servlet-mapping>
	<!-- 後臺首頁 end -->
	<!-- 員工 start -->
	<servlet>
		<servlet-name>EmpServlet</servlet-name>
		<servlet-class>com.emp.controller.EmpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmpServlet</servlet-name>
		<url-pattern>/back-end/employee/emp.do</url-pattern>
	</servlet-mapping>
	<!-- 員工 end -->
	
	<!-- 會員 start -->
	<servlet>
		<servlet-name>MemServlet</servlet-name>
		<servlet-class>com.mem.controller.MemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemServlet</servlet-name>
		<url-pattern>/back-end/member/mem.do</url-pattern>
		<url-pattern>/front-end/member/mem.do</url-pattern>
		<url-pattern>/member/mem.do</url-pattern>
	</servlet-mapping>
	<!-- 會員 stop -->
</web-app>